# Mailer Service - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================
# MAILER SERVICE CONFIGURATION
# ==============================================

# Server Configuration
PORT=3002
NODE_ENV=development
MAILER_URL=http://localhost:3002

# Security Configuration
JWT_SECRET=your-mailer-jwt-secret-here-min-32-characters

# Resend API Configuration
RESEND_API_KEY=your-resend-api-key-here

# Campaign Configuration
CAMPAIGN_BATCH_SIZE=100
CAMPAIGN_RATE_LIMIT=10
CAMPAIGN_RETRY_ATTEMPTS=3
CAMPAIGN_RETRY_DELAY=5000

# Database Configuration (if using separate DB)
MAILER_DB_PATH=./data/mailer.sqlite

# Email Configuration
DEFAULT_FROM_NAME=Multi-Banking Panel
DEFAULT_FROM_EMAIL=no-reply@yourdomain.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/mailer.log

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
